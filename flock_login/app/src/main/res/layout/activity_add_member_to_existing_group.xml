<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s165174_at_mail.itsligo.ie.flock_login.AddMemberToExistingGroupActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar" />
    <TextView
        android:textSize="20dp"
        android:textAlignment="center"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:hint="Phone number to add"
        android:inputType="number"
        android:id="@+id/editTextAddPhoneNumber"
        android:layout_below="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonAddNumber"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/editTextAddPhoneNumber"
        android:layout_toEndOf="@+id/editTextAddPhoneNumber" />
    <ListView
        android:id="@+id/listViewAddedMembers"
        android:layout_above="@+id/buttonAddGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddPhoneNumber">

    </ListView>
    <Button
        android:id="@+id/buttonFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
