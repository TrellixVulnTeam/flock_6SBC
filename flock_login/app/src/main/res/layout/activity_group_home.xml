<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="s165174_at_mail.itsligo.ie.flock_login.GroupHomeActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar" />
    <TextView
        android:background="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/action_bar"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ListView
        android:layout_below="@+id/textViewHeading"
        android:id="@+id/listViewMembersInGroup"
        android:layout_width="match_parent"
        android:layout_height="290dp">

    </ListView>

    <Button
        android:id="@+id/buttonAddMember"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="Add member to group"
        android:layout_toRightOf="@+id/buttonMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonMessages"
        android:text="Messages"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
